<?xml version="1.0"?>
<ruleset name="WPNonceAnalysis">
    <description>Enhanced WordPress Nonce Analysis Ruleset</description>

    <!-- Include all sniffs in the WPNonceAnalysis standard -->
    <rule ref="WPNonceAnalysis.Security.NonceGeneration"/>
    <rule ref="WPNonceAnalysis.Security.NonceVerification"/>
    <rule ref="WPNonceAnalysis.Security.NonceImplementationQuality"/>

    <!-- Configure file scanning -->
    <arg name="extensions" value="php"/>
    <arg name="colors"/>
    <arg name="parallel" value="8"/>
    <arg name="report" value="full"/>
    <arg name="report-width" value="120"/>
    <arg name="tab-width" value="4"/>

    <!-- Exclude common directories -->
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*/build/*</exclude-pattern>
    <exclude-pattern>*/dist/*</exclude-pattern>
    <exclude-pattern>*/assets/*</exclude-pattern>
    <exclude-pattern>*/languages/*</exclude-pattern>
    <exclude-pattern>*/lib/external/*</exclude-pattern>
    <exclude-pattern>*/includes/libraries/*</exclude-pattern>
    <exclude-pattern>*/third-party/*</exclude-pattern>

</ruleset>
