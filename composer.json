{
    "name": "aldia/wp-nonce-analysis",
    "description": "A comprehensive static analysis tool for detecting and analyzing WordPress nonce usage patterns",
    "type": "library",
    "require": {
        "php": ">=7.4",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "WPNonceAnalysis\\": "src/"
        }
    },
    "autoload-dev": {
    "psr-4": {
        "WPNonceAnalysis\\Tests\\": "tests/"
    },
    "classmap": [
        "vendor/squizlabs/php_codesniffer/tests/Standards",
        "vendor/squizlabs/php_codesniffer/src"
    ]
},
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=WPNonceAnalysis"
    }
}